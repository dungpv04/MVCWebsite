@model DemoMvc.Models.BookListingViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Thư viện sách</h2>

@using (Html.BeginForm("Search", "Book"))
{

    @Html.TextBoxFor(model => model.Keyword)
    @Html.ValidationMessageFor(model => model.Keyword)
    <button type="submit">Tìm kiếm</button>

}

<p>
    @Html.ActionLink("Thêm sách", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            Id
            <input type="button" value="⇧" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "IdAsc", Page = Model.Page})' " />
            <input type="button" value="⇩" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "IdDesc", Page = Model.Page})' " />
        </th>

        <th>
            Name
            <input type="button" value="⇧" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "NameAsc", Page = Model.Page})' " />
            <input type="button" value="⇩" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "NameDesc", Page = Model.Page})' " />
        </th>
        <th>
            Content
            <input type="button" value="⇧" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "ContentAsc", Page = Model.Page})' " />
            <input type="button" value="⇩" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "ContentDesc", Page = Model.Page})' " />
        </th>
        <th>
            Author Name
            <input type="button" value="⇧" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "AuthorNameAsc", Page = Model.Page})' " />
            <input type="button" value="⇩" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "AuthorNameDesc", Page = Model.Page})' " />
        </th>
        <th>
            Author ID
            <input type="button" value="⇧" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "AuthorIdAsc", Page = Model.Page})' " />
            <input type="button" value="⇩" onclick=" location.href = '@Url.Action("Index", "Book", new {sortRequest = "AuthorIdDesc", Page = Model.Page})' " />
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Listing)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Prev", "Prev", new { Page = Model.Page, sortRequest = Model.sortRequest })
@Html.DisplayFor(model => model.Pager)
@Html.ActionLink("Next", "Next", new { Page = Model.Page, sortRequest = Model.sortRequest })
