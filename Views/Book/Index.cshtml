@model DemoMvc.Models.BookListingViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Thư viện sách</h2>

@using(Html.BeginForm("Search", "Book"))
 {

    @Html.TextBoxFor(model => model.keyword)
    @Html.ValidationMessageFor(model => model.keyword)
    <button type="submit">Tìm kiếm</button>

 }

<p>
    @Html.ActionLink("Thêm sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Content
        </th>
        <th>
            Author ID
        </th>
        <th>
            Author Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.listing) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
