@model DemoMvc.Models.BookListingViewModel

@{
    ViewBag.Title = "Search";
}

<h2>View</h2>

<h2>Kết quả tìm kiếm cho "@Html.DisplayFor(Model => Model.Keyword)"</h2>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Nội dung
        </th>
        <th>
            Id tác giả
        </th>
        <th>
            Tên tác giả
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Listing)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Prev", "PrevSearch", new { Page = Model.Page, Keyword = Model.Keyword })
@Html.DisplayFor(Model => Model.Pager)
@Html.ActionLink("Next", "NextSearch", new { Page = Model.Page, Keyword = Model.Keyword })

<br />

<div>
    @Html.ActionLink("Quay về danh sách", "Index")
</div>